pipeline {

agent any

stages {

stage("create clone"){

steps{

  git branch: 'main', url: 'https://github.com/Virtusatraining/Assignment_task.git'
    }
}



stage("build") {

steps {

sh "docker build -t apacheserver ."

}

}

stage("run") {

steps {

sh """

docker run -d -p 60:80 --name apaserver apacheserver:latest

"""

}

}

}

}
